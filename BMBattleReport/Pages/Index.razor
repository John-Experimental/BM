@page "/"

<div class="mainContent">
    <div class="container">
        <div class="col-md-12">
            <label>Copy/paste your raw html of a battle report here:</label>
            <input @bind="ReportInput" />
            <button @onclick=@TransformReport>Transform to wiki friendly report</button>
        </div>
        <div class="col-md-12">
            <label for="output">Wiki friendly output</label>
            <output>@ReportOutput</output>
        </div>
    </div>
</div>

